{
  "name": "@sanity/mcp-server",
  "version": "0.8.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanity-io/sanity-mcp-server"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "sanity-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "prebuild": "node scripts/generate-version.js",
    "build": "tsc && chmod 755 build/index.js",
    "dev": "nodemon --ext ts --ignore build/ --watch src/ --exec 'npm run build && npm start'",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run build",
    "start": "node build/index.js"
  },
  "prettier": "@sanity/prettier-config",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@sanity/client": "6.28.4-generate.0",
    "@sanity/id-utils": "^1.0.0",
    "chrono-node": "^2.8.0",
    "dotenv": "^16.4.7",
    "fast-xml-parser": "^5.2.0",
    "lodash-es": "^4.17.21",
    "outdent": "^0.8.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@sanity/prettier-config": "^1.0.3",
    "@types/lodash-es": "^4.17.12",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.13.11",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "nodemon": "^3.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}
